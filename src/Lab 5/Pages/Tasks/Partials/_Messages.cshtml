@model string?

@*
    Messages Fragment
    =================
    
    Target ID: #messages
    Swap: outerHTML
    Returned by: OnGetMessages
    
    Purpose:
    - Displays flash/success/info messages
    - Must always render wrapper for consistent htmx swapping
    - Also used as OOB swap target for job completion
*@

<div id="messages">
    @if (!string.IsNullOrWhiteSpace(Model))
    {
        <div class="alert alert-success alert-dismissible fade show workshop-alert" role="alert">
            @Model
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
